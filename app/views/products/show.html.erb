<%= image_tag @product.photo, width:150 if @product.photo.attached? %>

<h1 class='title'><%= @product.title =%></h1>

<p class='description'><%= @product.description =%></p>

<span class='price'><%= @product.price%>$</span>

<%= link_to t('.edit'), edit_product_path(@product) if @product.owner? %>

<%= button_to t('.delete'), product_path(@product), method: :delete, data: { confirm: t('common.comfirm') } if @product.owner? %>
